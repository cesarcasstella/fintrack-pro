# FinTrack Pro - Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================
# DATABASE
# ==============================================
# Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ==============================================
# AUTHENTICATION
# ==============================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-secret-here

# Supabase (if using Supabase Auth instead)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ==============================================
# WHATSAPP (Twilio)
# ==============================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Webhook signing secret (optional, for security)
TWILIO_WEBHOOK_SECRET=your_webhook_secret

# ==============================================
# AI/NLP (Anthropic)
# ==============================================
ANTHROPIC_API_KEY=your_anthropic_api_key

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
# PostHog (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (optional)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# AWS S3 for backups (optional)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=fintrack-backups

# Slack notifications (optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features
# NEXT_PUBLIC_ENABLE_WHATSAPP=true
# NEXT_PUBLIC_ENABLE_PROJECTIONS=true
# NEXT_PUBLIC_ENABLE_SIMULATOR=true

# ==============================================
# APP CONFIGURATION
# ==============================================
# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=COP

# App URL (for production)
# NEXT_PUBLIC_APP_URL=https://fintrack.app

# ==============================================
# DEVELOPMENT
# ==============================================
# Enable debug mode
# DEBUG=true

# Skip auth for development
# SKIP_AUTH=true
